var textInput = document.myForm.txtInput;
var clearScreen = false;

function isDisplayEmpty() {
	if (textInput.value.localeCompare("0") == 0)
		return true;
	else
		return false;
}

function btn1Keypad_onclick () {
	if (clearScreen == true) {
		textInput.value = "0";
		clearScreen = false;
	}
	if (isDisplayEmpty()) 
		textInput.value = "1";
	else 
		textInput.value += "1";
}

function btn2Keypad_onclick () {
	if (clearScreen == true) {
		textInput.value = "0";
		clearScreen = false;
	}
	if (isDisplayEmpty())
		textInput.value = "2";
	else
		textInput.value += "2";
}

